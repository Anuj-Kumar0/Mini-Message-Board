<!DOCTYPE html>
<html>

<head>
    <title>Mini Message Board</title>
</head>

<body>
    <h1>Messages</h1>
    <a href="/new">Create a New Message</a>
    <hr>

    <% messages.forEach((message, index)=> { %>
        <div>
            <h3>
                <%= message.user %>
            </h3>
            <p>
                <%= message.text %>
            </p>

            <a href="/message/<%= index %>">Open</a>
            <hr>
        </div>
        <% }); %>

</body>

</html>